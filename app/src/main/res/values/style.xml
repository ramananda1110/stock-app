<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StockApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--        default text color-->
        <item name="android:textColorTertiary">@color/black</item>


    </style>

    <style name="Style.StockApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--        default text color-->
        <item name="android:textColorTertiary">@color/black</item>


    </style>


    <style name="Style.App.InputLayout.Box" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="paddingStart">@dimen/_8sdp</item>
        <item name="colorAccent">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.EditText.Rounded</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.InputLayout.Box</item>

    </style>

    <style name="ThemeOverlay.App.InputLayout.Box" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="ShapeAppearance.App.EditText.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>